CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic

NAME = school

SRC = main.c \
      school.c

OBJ = $(SRC:.c=.o)

RM = rm -f

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) $(OBJ) *~ \#*\# $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: oclean
	$(RM) *~ \#*\# $(NAME)

re: fclean all
